echo "Loading modules for Isca on IU BigRed200"

# Load modules (matching your .modules file)
module load PrgEnv-intel
module load cmake
module load cray-hdf5
module load cray-netcdf
module load cray-python

# BigRed200 uses Cray compiler wrappers
# ftn wraps ifort (Fortran)
# cc wraps icc (C)
export F90=ftn
export CC=cc

# Intel Fortran runtime settings
# Continue execution even if I/O errors occur during file close operations
export FORT_CONTINUE_ON_ERR=1

# Set the mkmf template to use Intel compiler settings
export GFDL_MKMF_TEMPLATE=bigred200
